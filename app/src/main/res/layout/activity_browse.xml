<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrowseActivity">

    <ImageView
        android:id="@+id/appBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom ="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D2FFFFFF"
                android:orientation="vertical"
                android:padding="20dp">



                <TextView
                    android:id="@+id/schoolLaptopTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/schoolLaptopTitle"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/schoolLaptopSpecsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/schoolLaptopSpecsTitle"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/schoolLaptopSpecs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schoolLaptopSpecsText"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/schoolCustomizationOptionsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/customizationOptionsText"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <CheckBox
                    android:id="@+id/schoolLaptop_TouchScreenCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/schoolLaptop_TouchScreen" />

                <CheckBox
                    android:id="@+id/schoolLaptop_WebcamCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/schoolLaptop_Webcam" />

                <TextView
                    android:id="@+id/schoolRAMOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RAM Configuration"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:id="@+id/schoolRAMOptionsRadioGroup">

                    <RadioButton
                        android:id="@+id/school6GBRAM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="@color/black"
                        android:text="6 GB RAM + $0.00" />

                    <RadioButton
                        android:id="@+id/school8GBRAM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="8 GB RAM + $200.00" />

                </RadioGroup>

                <TextView
                    android:id="@+id/schoolAdditionalOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional Options"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/schoolLaptop_extWarranty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Extended Warranty + $350.00"
                    android:textColor="@color/black"/>

                <Switch
                    android:id="@+id/schoolLaptop_mouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wireless Mouse + $100.00"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:id="@+id/schoolAddToCart"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:adjustViewBounds="false"
                    android:backgroundTint="#00FF0000"
                    android:backgroundTintMode="src_in"
                    android:cropToPadding="true"
                    android:onClick="onClickAddToCartSchool"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/addtocart" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="20dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/workLaptopTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/workLaptopTitle"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/workLaptopSpecsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/workLaptopSpecsTitle"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/workLaptopSpecs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/workLaptopSpecsText"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/workCustomizationOptionsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/customizationOptionsText"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/workLaptop_TouchScreenCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/workLaptop_TouchScreen" />

                <CheckBox
                    android:id="@+id/workLaptop_WebcamCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/workLaptop_Webcam" />

                <CheckBox
                    android:id="@+id/workLaptop_FPSCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/workLaptop_FPS" />

                <TextView
                    android:id="@+id/workRAMOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RAM Configuration"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/workRAMOptionsRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp">

                    <RadioButton
                        android:id="@+id/work8GBRAM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:checked="true"
                        android:text="8 GB RAM + $0.00" />

                    <RadioButton
                        android:id="@+id/work12GBRAM"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="12 GB RAM + $400.00" />

                </RadioGroup>

                <TextView
                    android:id="@+id/workAdditionalOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional Options"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/workLaptop_extWarranty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:text="Extended Warranty + $350.00" />

                <Switch
                    android:id="@+id/workLaptop_mouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Wireless Mouse + $100.00" />

                <ImageButton
                    android:id="@+id/workAddToCart"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#00FFFFFF"
                    android:backgroundTintMode="src_in"
                    android:cropToPadding="true"
                    android:onClick="onClickAddToCartWork"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/addtocart" />


                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="20dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/gamingLaptopTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/gamingLaptopTitle"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/workLaptopSpecsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:text="@string/gamingLaptopSpecsTitle"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/gamingLaptopSpecs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gamingLaptopSpecsText"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/gamingCustomizationOptionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/customizationOptionsText"
                    android:textSize="16dp" />

                <CheckBox
                    android:id="@+id/gamingLaptop_WebcamCheckbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/gamingLaptop_Webcam" />

                <CheckBox
                    android:id="@+id/gamingLaptop_4KCheckbox"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="@string/gamingLaptop_4K" />

                <TextView
                    android:id="@+id/gamingRAMOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RAM Configuration"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/gamingRAMOptionsRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp">

                    <RadioButton
                        android:id="@+id/gaming16GBRAM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:checked="true"
                        android:text="16 GB RAM + $0.00" />

                    <RadioButton
                        android:id="@+id/gaming24GBRAM"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="24 GB RAM + $600.00" />

                </RadioGroup>

                <TextView
                    android:id="@+id/gamingAdditionalOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Options"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/gamingLaptop_extWarranty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:text="Extended Warranty + $350.00" />

                <Switch
                    android:id="@+id/gamingLaptop_mouse"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Wireless Mouse + $100.00" />

                <Switch
                    android:id="@+id/gamingLaptop_coolingPad"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Cooling Pad + $200.00" />

                <ImageButton
                    android:id="@+id/gamingAddToCart"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#00FFFFFF"
                    android:backgroundTintMode="src_in"
                    android:cropToPadding="true"
                    android:onClick="onClickAddToCartGaming"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/addtocart" />

            </LinearLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D2FFFFFF"
            android:padding="10dp">

            <Button
                android:id="@+id/displayOrders_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickDisplayOrders"
                android:text="Display Orders"
                app:layout_constraintBottom_toTopOf="@id/clearCart_btn"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/completeOrder_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickCompleteOrder"
                android:text="Complete Order"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/clearCart_btn"/>

            <Button
                android:id="@+id/clearCart_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickClearCart"
                android:text="Clear Cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</FrameLayout>